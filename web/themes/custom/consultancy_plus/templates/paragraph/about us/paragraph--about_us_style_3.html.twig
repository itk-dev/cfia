                            {{content.field_svg_icon.0}}
                        </div>
                        <span>{{content.field_text.0}}</span>
                        <h6>{{content.field_text_2.0}}</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-content pt-10">
                    <h2>{{content.field_title.0}}</h2>
                    <div class="content-descriptions">
                        {{content.field_formatted_description.0}}
                    </div>
                    <div class="quote">
                        <p>{{content.field_person_message.0}}</p>
                    </div>
                    <div class="testi-details">
                        <img src="{{file_url(content.field_image_2['#items'].entity.uri.value)}}" alt="{{content.field_image_2['#items'].alt}}">
                            <div class="testi-designation">
                                <h6>{{content.field_person_name.0}}</h6>
                                <span>{{content.field_designation.0}}</span>
                            </div>    
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</section>
{% endif %}